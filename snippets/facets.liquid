{% style %}
  /* Checkmark */

  .facet-checkbox > input[type='checkbox']:checked ~ .icon-checkmark {
    visibility: visible;
  }

  /* Menu drawer */

  details.menu-opening .mobile-facets__close {
    display: flex;
    opacity: 1;
  }

  /* .mobile-facets__wrapper .disclosure-has-popup[open] */
  menu-drawer > details[open] > summary:before {
    height: 100vh;
    z-index: 3;
  }

  .disclosure-has-popup[open] > summary:before {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: block;
    content: ' ';
    background: transparent;
  }

  menu-drawer > details[open] > summary:before {
    visibility: visible;
    opacity: 1;
    transition: opacity var(--duration-default) ease, visibility var(--duration-default) ease;
  }

  .disclosure-has-popup[open] > facet-filter-form {
    z-index: 100;
  }

  .menu-opening .mobile-facets__inner {
    transform: translate(0);
  }

  /* Filter + sort submenu opening */
  details[open] > .mobile-facets__submenu {
    transition: transform 0.4s cubic-bezier(0.29, 0.63, 0.44, 1), visibility 0.4s cubic-bezier(0.29, 0.63, 0.44, 1);
  }

  details[open].menu-opening > .mobile-facets__submenu {
    transform: translate(0);
    visibility: visible;
  }

  .mobile-facets .submenu-open {
    visibility: hidden;
  }

  .mobile-facets__label > input[type='checkbox']:checked ~ .icon-checkmark {
    visibility: visible;
  }

  select::-ms-expand {
    display: none;
  }

  select {
    /* for Firefox */
    -moz-appearance: none;
    /* for Chrome */
    -webkit-appearance: none;
  }

  .facets__disclosure[open] .facets__display,
  .facets__disclosure-vertical[open] .facets__display-vertical {
    animation: animateMenuOpen 200ms ease;
  }

  details > summary:first-of-type {
    counter-increment: list-item 0;
  }

  @keyframes animateMenuOpen {
    0% {
      opacity: 0;
      transform: translateY(-1.5rem);
    }

    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
{% endstyle %}

