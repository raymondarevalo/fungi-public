{% endcomment %}

{% style %}
  :root {
    --color-accent: {{ settings.colors_accent.hue }} {{ settings.colors_accent.saturation }}% {{ settings.colors_accent.lightness }}%;
    --color-surface: {{ settings.colors_surface.hue }} {{ settings.colors_surface.saturation }}% {{ settings.colors_surface.lightness }}%;
    --color-contrast: {{ settings.colors_contrast.hue }} {{ settings.colors_contrast.saturation }}% {{ settings.colors_contrast.lightness }}%;

    --color-primary: {{ settings.colors_primary.hue }} {{ settings.colors_primary.saturation }}% {{ settings.colors_primary.lightness }}%;
    --color-secondary: {{ settings.colors_secondary.hue }} {{ settings.colors_secondary.saturation }}% {{ settings.colors_secondary.lightness }}%;

    --color-button-bg: {{ settings.colors_button_background.hue }} {{ settings.colors_button_background.saturation }}% {{ settings.colors_button_background.lightness }}%;
    --color-button-fg: {{ settings.colors_button_text.hue }} {{ settings.colors_button_text.saturation }}% {{ settings.colors_button_text.lightness }}%;

    --gradient: {{ settings.colors_gradient }};
  }
{% endstyle %}
